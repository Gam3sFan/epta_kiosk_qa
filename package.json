{
  "name": "epta_kiosk_qa",
  "version": "1.0.5",
  "description": "Electron kiosk Q&A experience inspired by epta_kiosk_content.",
  "main": "src/main.js",
  "scripts": {
    "start": "npm run build:renderer && electron .",
    "dev": "concurrently -k \"npm run build:renderer:watch\" \"NODE_ENV=development electron .\"",
    "build:renderer": "esbuild src/renderer/index.jsx --bundle --platform=browser --format=esm --sourcemap --outfile=dist/renderer.js --loader:.svg=dataurl --loader:.mp4=file --loader:.webm=file --loader:.srt=file --loader:.png=dataurl --loader:.pdf=file --loader:.woff=file --loader:.woff2=file",
    "build:renderer:watch": "npm run build:renderer -- --watch",
    "build:web": "npm run build:renderer && node scripts/build-web.js",
    "dist:win": "npm run build:renderer && electron-builder --win --publish=never",
    "dist:win:publish": "npm run build:renderer && electron-builder --win --publish=always"
  },
  "author": "",
  "license": "ISC",
  "config": {
    "autoUpdate": {
      "githubOwner": "Gam3sFan",
      "githubRepo": "epta_kiosk_qa",
      "releaseType": "release",
      "private": false
    }
  },
  "build": {
    "appId": "com.epta.kiosk.qa",
    "productName": "Epta Kiosk QA",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/**/*",
      "package.json"
    ],
    "asar": true,
    "publish": [
      {
        "provider": "github",
        "owner": "Gam3sFan",
        "repo": "epta_kiosk_qa",
        "releaseType": "release",
        "private": false
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/epta_icon_qa.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowToChangeInstallationDirectory": false,
      "include": "electron/installer.nsh"
    }
  },
  "devDependencies": {
    "@electron/packager": "^19.0.1",
    "concurrently": "^9.2.1",
    "electron": "^39.1.2",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.27.0"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "qrcode": "^1.5.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
